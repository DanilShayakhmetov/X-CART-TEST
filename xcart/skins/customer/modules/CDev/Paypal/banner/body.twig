{##
 # Paypal Credit banner
 #}
<div class="paypal-credit {{ this.getCSSClasses() }}">
  {% set ppBanner %}
  <body style="margin: 0;">
    <style>
      span div {
        text-align: center;
      }

      img {
        max-width: 100%;
        height: auto;
      }
    </style>
    <script data-pp-pubid="{{ this.getPublisherId() }}" data-pp-placementtype="{{ this.getPlacementType() }}">
      //<![CDATA[
        (function (d, t) {
          "use strict";
          var s = d.getElementsByTagName(t)[0], n = d.createElement(t);
          n.src = "//paypal.adtag.where.com/merchant.js";
          s.parentNode.insertBefore(n, s);
        }(document, "script"));
      //]]>
    </script>
  </body>
  {% endset %}
  <iframe srcdoc="{{ ppBanner | escape }}" style="width: 100%; overflow: visible; height: 70px;"></iframe>
</div>
