{##
 # Customer's X-Payments saved cards
 #}
<div class="dialog-content saved-cards-container">

  {% if this.getCards() %}

    {% include 'modules/XPay/XPaymentsCloud/account/xpayments_cards.table.twig' %}

  {% else %}

    {% include 'modules/XPay/XPaymentsCloud/account/xpayments_cards.empty.twig' %}

  {% endif %}

  {% if this.isSaveCardsAllowed() %}
    <div class="add-new-card-button{% if not this.getCards() %} text-center{% endif %}">
      {{ widget('\\XLite\\Module\\XPay\\XPaymentsCloud\\View\\Button\\AddNewCard', label=t('Add new card'), style='main-button', profileId=this.profile_id, amount=this.getCardSetupAmount()) }}
    </div>
  {% elseif this.isSaveCardsLimitReached() %}
      {{ t('You\'ve reached the maximal amount of saved cards. If you want to add a new card, please remove the unused cards.') }}
  {% endif %}

</div>
