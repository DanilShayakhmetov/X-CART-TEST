{##
 # Credit card form
 #}

<div class="cc-form-container">
    <div class="header-line"></div>
    <div class="content">
        <div class="header">
            <div class="lock"></div>
            <h3>{{ t('Secure credit card payment') }}</h3>
        </div>

        <div class="cc-form">
            <div class="cardType">
                <div class="title">{{ t('Card type') }}</div>
                <div class="value">
                    <select v-model="payment.cc_type" id="card_type" tabindex="-1" lazy>
                        <option disabled selected>{{ t('Chose credit card type') }}</option>
                        <option value="VISA">Visa</option>
                        <option value="MC">MasterCard</option>
                        <option value="JCB">JCB</option>
                        <option value="ER">Diners Club enRoute</option>
                        <option value="DICL">Diners Club</option>
                        <option value="DC">Discover</option>
                        <option value="AMEX">American Express</option>
                    </select>
                    <div class="btn-group">
                        <a class="dropdown-toggle icon blank" data-toggle="dropdown" href="#" tabindex="-1">
                            <span class="card mc"></span>{{ t('Choose card type') }}
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript: setCardType('VISA');">Visa</a></li>
                            <li><a href="javascript: setCardType('MC');">MasterCard</a></li>
                            <li><a href="javascript: setCardType('JCB');">JCB</a></li>
                            <li><a href="javascript: setCardType('ER');">Diners Club enRoute</a></li>
                            <li><a href="javascript: setCardType('DICL');">Diners Club</a></li>
                            <li><a href="javascript: setCardType('DC');">Discover</a></li>
                            <li><a href="javascript: setCardType('AMEX');">American Express</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="cardNumber">
                <div class="title">{{ t('Card number') }}</div>
                <div class="value">
                    <input size="25" id="cc_number" class="form-control validate[required,maxSize[255]]" placeholder="XXXX-XXXX-XXXX-XXXX" type="text" autocomplete="off" v-model="payment.cc_number" lazy pattern="(\d|\s|-)*" inputmode="numeric" type="tel">
                </div>
            </div>

            <div class="cardExpire">
                <div class="title">{{ t('Expiration date') }}</div>
                <div class="value">
                    <div class="top-line">
                        <div class="top-text">{{ t('MONTH') }} / {{ t('YEAR') }}</div>
                    </div>
                    <div class="bottom-line">
                        <div class="left-text">{{ t('VALID THRU') }}</div>
                        <div class="left-text left-text_extended">
                            <span class="valid-thru">{{ t('VALID THRU') }}</span>
                            <br>
                            <span class="month-year">{{ t('MONTH') }} / {{ t('YEAR') }}</span>
                        </div>
                        <div class="month-container">
                            <input v-model="payment.cc_expire_month" id="cc_expire_month" type="tel" class="form-control validate[required]" autocomplete="off" lazy placeholder="MM">
                            <div class="bottom-text-month text-label">{{ t('MONTH') }}</div>
                        </div>
                        <div class="year-container">
                            <input v-model="payment.cc_expire_year" id="cc_expire_year" type="tel" class="form-control validate[required]" autocomplete="off" lazy placeholder="YY">
                            <div class="bottom-text-month text-label">{{ t('YEAR') }}</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="cardCVV2 required">
                <div class="title">{{ t('CVV / CVC') }}</div>
                <div class="value">
                    <input v-model="payment.cc_expire_cvv2" size="5" maxlength="4" id="cc_cvv2" type="tel" autocomplete="off" class="form-control validate[required]" lazy placeholder="CVC">
                    <a id="cvv2-hint" class="cvv2-hint" role="button" data-toggle="popover" data-placement="top" data-content=" ">?</a>
                    <div class="right-text">
                        <span class="default-text">{{ t('Credit card security code (if present)') }}</span>
                        <span class="VISA">{{ t('Last three numbers on the back side of your card') }}</span>
                        <span class="MC">{{ t('Last three numbers on the back side of your card') }}</span>
                        <span class="JCB">{{ t('Last three numbers on the back side of your card') }}</span>
                        <span class="AMEX">{{ t('Four-digit number on the front side of your card') }}</span>
                    </div>
                </div>
                <div class="icon-container">
                    <div class="icon mc"></div>
                </div>
            </div>

            <div class="cardName">
                <div class="title">{{ t('Cardholder name') }}</div>
                <div class="value">
                    <input size="40" id="cc_name" class="form-control validate[required]" placeholder="{{ t('Cardholder name', [], null, 'placeholder') }}" type="text" autocomplete="off" v-model="payment.cc_holder_name" lazy>
                </div>
            </div>

        </div>

    </div>
</div>
