{##
 # Social Login sign-in button
 #}

{% if this.getSeparatorPosition() == 'before' %}
<hr class="or-separator" />
<div class="or-separator">
  <span class="or-separator-text">{{ this.getSeparatorText() }}</span>
</div>
{% endif %}

{% if this.getTextBefore() %}
  <div class="social-login-note note-before">
    {{ this.getTextBefore() }}
  </div>
{% endif %}

<div class="social-login-container inline-in-checkout">
  <ul class="social-login">
    <li class="social-net-element social-net-{{ this.getButtonStyle() }} social-net-Amazon">
      <div id="loginWithAmazonDiv_{{ this.getButtonStyle() }}_{{ this.getHash() }}" data-size="large"></div>
    </li>
  </ul>
</div>

{% if this.getTextAfter() %}
  <div class="social-login-note note-after">
    {{ this.getTextAfter() }}
  </div>
{% endif %}

{% if this.getSeparatorPosition() == 'after' %}
<hr class="or-separator" />
<div class="or-separator">
  <span class="or-separator-text">{{ this.getSeparatorText() }}</span>
</div>
{% endif %}