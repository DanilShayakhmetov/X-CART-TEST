{##
 # Credit card form
 #}

<div class="cc-form-container">
  <div class="header-line"></div>
  <div class="content">
    <div class="header">
      <div class="lock"></div>
      <h2>{{ t('Secure credit card payment') }}</h2>
    </div>

    <div class="need-to-reload">
      {{ t('The token has expired, please click here to reload the form and then fill the card details again.')|raw }}
    </div>

    <div class="cc-form">
      <div class="cardName-CVV-wrapper">
        <div class="cardName field">
          <div class="title">{{ t('Cardholder name') }}:</div>
          <div class="value"></div>
        </div>

        <div class="cardType">
        </div>
      </div>

      <div class="cardNumber field">
        <div class="label">{{ t('Card number') }}</div>
        <div class="value form-control" data-bluesnap="ccn"></div>
        <div class="required">{{ t('Please enter a valid credit card number') }}</div>
        <div class="unsupported">{{ t('CC type is not supported by the merchant') }}</div>
      </div>

      <div class="cardExpire field">
        <div class="label">{{ t('Exp. date') }}</div>
        <div class="value">
          <div class="top-line">
            <div class="top-text lite-hide">{{ t('MONTH') }} / {{ t('YEAR') }}</div>
          </div>
          <div class="bottom-line">
            <div class="left-text lite-hide">{{ t('VALID THRU') }}</div>
            <div class="left-text lite-hide default-hide mobile-show">
              <span class="valid-thru">{{ t('VALID THRU') }}</span>
              <br>
              <span class="month-year">{{ t('MONTH') }} / {{ t('YEAR') }}</span>
            </div>
            <div class="form-control" data-bluesnap="exp"></div>
          </div>
        </div>
        <div class="required">{{ t('Please enter the expiration date (MM/YYYY)') }}</div>
      </div>

      <div class="cardCVV2 field">
        <div class="label">{{ t('Security code') }}</div>
        <div class="value">
          <div data-bluesnap="cvv" class="form-control"></div>
          <a id="cvv2-hint" class="cvv2-hint" role="button" data-toggle="popover" data-trigger="hover" data-placement="top" data-content=" ">?</a>
          <div class="right-text">
            <span class="default-text">{{ t('Credit card security code (if present)') }}</span>
            <span class="Visa">{{ t('Last three numbers on the back side of your card') }}</span>
            <span class="MasterCard">{{ t('Last three numbers on the back side of your card') }}</span>
            <span class="JCB">{{ t('Last three numbers on the back side of your card') }}</span>
            <span class="AmericanExpress">{{ t('Four-digit number on the front side of your card') }}</span>
          </div>
        </div>
        <div class="icon-container">
          <div class="icon"></div>
        </div>
        <div class="required">{{ t('Please enter the CVV of your card') }}</div>
      </div>

    </div>

  </div>
</div>
