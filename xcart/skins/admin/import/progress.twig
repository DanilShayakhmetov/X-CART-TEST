{##
 # Import progress section
 #}

<div class="import-box import-progress event-task-progress-page">

  {{ widget('XLite\\View\\Import\\Titles') }}

  <div class="content">
    {% form 'XLite\\View\\Form\\Import' with {formAction: 'cancel'} %}
      <div class="subcontent clearfix">
        {{ widget('XLite\\View\\EventTaskProgress', event=this.getEventName(), message=this.getProgressMessage(), showCancel=false ) }}
      </div>
      {{ widget('XLite\\View\\StickyPanel\\EventProgress') }}
    {% endform %}
  </div>

</div>
