{##
 # Layout settings template
 #
 # @ListChild (list="layout_settings.settings", weight="20")
 #}
<div class="current-template">
  <span>{{ t('Current template') }}:</span> <span class="template-name">{{ this.getCurrentSkinName() }}</span>
  {% if this.showSettingsForm() %}
    <div class="settings-form">
      {{ widget('XLite\\View\\Button\\SimpleLink', location=this.getSettingsForm(), label=t('Edit custom options')) }}
    </div>
  {% endif %}
</div>
