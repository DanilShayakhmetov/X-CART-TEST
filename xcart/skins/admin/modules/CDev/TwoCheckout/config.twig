{##
 # 2Checkout.com configuration page
 #}

<table cellspacing="1" cellpadding="5" class="settings-table">

  <tr>
    <td class="setting-name">
      <label for="settings_login">{{ t('2Checkout.com account number') }}</label>
    </td>
    <td>
      <input type="text" id="settings_account" name="settings[account]" value="{{ this.paymentMethod.getSetting('account') }}" class="validate[required,maxSize[255]]" />
    </td>
  </tr>

  <tr>
    <td class="setting-name">
      <label for="settings_key">{{ t('Secret word') }}</label>
    </td>
    <td>
      <input type="text" id="settings_secret" name="settings[secret]" value="{{ this.paymentMethod.getSetting('secret') }}" class="validate[required,maxSize[255]]" />
    </td>
  </tr>

  <tr>
    <td class="setting-name">
      <label for="settings_language">{{ t('Language') }}</label>
    </td>
