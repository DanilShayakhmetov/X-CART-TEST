{##
 # Backup template
 #}

<div id="code_backup">
  {% form '\\XLite\\Module\\XC\\ThemeTweaker\\View\\Form\\Backup' with {className: 'custom-code-form'} %}

    <div class="formfield-backup">
        {{ widget('\\XLite\\Module\\XC\\ThemeTweaker\\View\\FormField\\Textarea\\CodeMirror', fieldName='backup', cols='140', rows='20', fieldId='backup', codeMode=this.getCodeMode(), value=this.getBackupContent(), readOnly='true', fieldOnly='true') }}
    </div>

    <div class="buttons model-form-buttons">
      {{ widget('\\XLite\\View\\Button\\Submit', style='action', label=t('Restore this version')) }}
      <a class="hide-button" href="#">{{ t('Hide') }}</a>
    </div>

  {% endform %}
</div>
