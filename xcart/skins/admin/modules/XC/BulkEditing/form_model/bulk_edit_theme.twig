
{% block form_input_wrapper %}
    {% if is_data_field %}
        <div class="input-wrapper hidden" v-bind:class="{{ '{' }}'hidden':!isEdited('{{ v_model }}'){{ '}' }}">
            {{- form_widget(form) -}}
        </div>
        <div v-on:click="setEdited('{{ v_model }}', $event)" v-bind:class="{{ '{' }}'hidden':isEdited('{{ v_model }}'){{ '}' }}" class="placeholder btn regular-button">{{ t('Click to specify') }}</div>
        <div v-on:click="setNotEdited('{{ v_model }}', $event)" v-bind:class="{{ '{' }}'hidden':!isEdited('{{ v_model }}'){{ '}' }}" class="undo hidden">{{ t('Cancel') }}</div>
    {% else %}
        <div class="input-wrapper">
            {{- form_widget(form) -}}
        </div>
    {% endif %}
{% endblock %}
