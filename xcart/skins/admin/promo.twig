{% if this.isPromoBlockVisible(this.promoId) %}
  <div class="promo-block {{ this.promoId }}-promo {{ this.additionalClasses }}" data-promo-id="{{ this.promoId }}">
    <div class="promo-content">{{ this.promoContent|raw }}</div>
    <div class="close">{{ this.displaySVGImage('images/icon-close-promo.svg') }}</div>
  </div>
{% endif %}
