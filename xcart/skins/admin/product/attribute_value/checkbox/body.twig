{##
 # Attribute value (checkbox)
 #}
 
<label{% if this.attrValues.1.defaultValue %} class="checked"{% endif %}>
  <span class="title">{{ this.getTitle() }}{{ this.getModifierTitle()|raw }}</span>
  <div class="checbox-box">
    <input type="hidden" name="{{ this.getName() }}" value="{{ this.attrValues.0.id }}"/>
    <input type="checkbox" name="{{ this.getName() }}" data-attribute-id="{{ this.attribute.id }}" value="{{ this.attrValues.1.id }}" {% if this.isCheckedValue() %} checked="checked" {% endif %} data-unchecked="{{ this.attrValues.0.id }}" {{ this.printTagAttributes(this.getInputAttributes())|raw }} />
  </div>
</label>
