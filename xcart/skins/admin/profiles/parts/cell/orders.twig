{% if this.entity.orders_count and this.auth.isPermissionAllowed('manage orders') %}
  <a href="{{ url('order_list', 'searchByCustomer', {'profileId': this.entity.profile_id}) }}">{{ this.entity.orders_count }}</a>
{% elseif this.entity.orders_count and not this.auth.isPermissionAllowed('manage orders') %}
  {{ this.entity.orders_count }}
{% else %}
  0
{% endif %}
