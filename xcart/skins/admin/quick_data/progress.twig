<div class="quick-data-box quick-data-progress event-task-progress-page">

  <div class="content">
    {% form 'XLite\\View\\Form\\QuickData' with {formAction: 'quickDataCancel'} %}
    <div class="subcontent clearfix">
      {{ widget('XLite\\View\\EventTaskProgress', event=this.getEventName(), message=this.getProgressMessage(), showCancel=false ) }}
